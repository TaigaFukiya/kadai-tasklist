<div　class="center jumbotron">
    <div class="text-center">
        <h1>Tasklist</h1>
        <h2><%= current_user.name %>さんのタスク一覧</h2>
            <% if @tasks.any? %>
                <table class = "table tabel-striped table-hover">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>タスク</th>
                            <th>詳細</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @tasks.each do |task| %>
                        <tr>
                            <td><%= link_to task.id, task %></td>
                            <td><%= task.content %></td>
                            <td><%= task.status %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <div>
                    <%= paginate @tasks %>
                </div>
            <% end %>      
        
        <%= link_to '全ユーザーのタスクリスト一覧', tasks_path, class: 'btn btn-lg btn-primary' %>
        <%= link_to 'タスクの追加', new_task_path, class: 'btn btn-lg btn-primary' %>
    </div>
</div>
            
